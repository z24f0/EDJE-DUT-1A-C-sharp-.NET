<UserControl x:Class="projet.PageAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <DockPanel Background="{StaticResource couleurFond}">

        <ScrollViewer Background="#1E0C46">
            <ScrollViewer.Effect>
                <DropShadowEffect/>
            </ScrollViewer.Effect>

            <StackPanel Margin="0 20 0 0">
                <!--x:Name="Page Click="changePage"-->
                <Button x:Name="Page" Click="changePage" Style="{StaticResource boutontitre}">
                    <Image Source="/images/SI_Wii_SuperMarioGalaxy_image1600w.jpg"  />
                </Button>
                <Button Width="700" Style="{StaticResource boutontitre}">
                    <Image Source="/images/maxresdefault.jpg"/>
                </Button>
                <Button Width="700" Style="{StaticResource boutontitre}">
                    <Image Source="/images/ten2wi00a.jpg"  />
                </Button>
            </StackPanel>

        </ScrollViewer>

       
    </DockPanel>
</UserControl>
